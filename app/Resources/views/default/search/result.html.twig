{% extends "default/homepage.html.twig" %}

{% block content %}
<body class="landing">

<!-- Header -->
<header id="header" class="alt">
    <nav id="nav">
        <ul>
            <li><a href="/">Home</a></li>
        </ul>
    </nav>
</header>
{% set amount = bike | length %}
<!-- Banner -->
<section id="banner" style="padding-bottom: 1px">
    <h2>Results for query : </h2>
    <h4 style="color: white">
        {% if result.brand is defined %}
        <p> Brand : {{ result.brand }} </p>
            {% endif %}
            {% if result.material is defined %}
                <p> Frame material : {{ result.material }}
            {% endif %}
            {% if result.material2 is defined %}
                   or {{ result.material2 }} </p>
            {% endif %}
            {% if result.fork is defined %}
               <p> Fork : {{ result.fork }}
            {% endif %}
            {% if result.fork2 is defined %}
                or {{ result.fork2 }}
            {% endif %}
            {% if result.fork3 is defined %}
                or {{ result.fork3 }}
            {% endif %}
            {% if result.fork4 is defined %}
               or {{ result.fork4 }}
            {% endif %}
            {% if result.fork5 is defined %}
                   or {{ result.fork5 }} </p>
            {% endif %}
            {% if result.damper is defined %}
               <p> Damper : {{ result.damper }}
            {% endif %}
            {% if result.damper2 is defined %}
                or {{ result.damper2 }}
            {% endif %}
            {% if result.damper3 is defined %}
                or {{ result.damper3 }}
            {% endif %}
            {% if result.damper4 is defined %}
                or {{ result.damper4 }}
            {% endif %}
            {% if result.damper5 is defined %}
                   or {{ result.damper5 }} </p>
            {% endif %}
            {% if result.wheels is defined %}
                <p> Rims material : {{ result.wheels }}
            {% endif %}
            {% if result.wheels2 is defined %}
                    or {{ result.wheels2 }} </p>
            {% endif %}
            {% if result.size is defined %}
                <p> Size : {{ result.size }}
            {% endif %}
            {% if result.size2 is defined %}
                or {{ result.size2 }} </p>
            {% endif %}
            {% if result.gears is defined %}
                <p> Gears : {{ result.gears }}
            {% endif %}
            {% if result.gears2 is defined %}
                or {{ result.gears2 }}
            {% endif %}
            {% if result.gears3 is defined %}
                    or {{ result.gears3 }} </p>
            {% endif %}
            {% if result.geometry is defined %}
                <p> Geometry : {{ result.geometry }}
            {% endif %}
            {% if result.geometry2 is defined %}
                or {{ result.geometry2 }}
            {% endif %}
            {% if result.geometry3 is defined %}
                   or {{ result.geometry3 }} </p>
            {% endif %}
            {% if result.year is defined %}
                <p> Yearbook : {{ result.year }} </p>
            {% endif %}
        {% if amount > 0 %}
        <p><a href="/search/result/{{ rand }}">Direct link to results</a></p>
        {% endif %}
    </h4>
</section>
{% block details %}
    <section id="two" class="wrapper style2 special">
        <div class="container">
            <div class="row 150%">
                {% if (amount > 0) and (amount <= 14) %}
                {% for row in bike %}
                <div class="6u 12u$(xsmall)">
                    <div class="image fit captioned">
                        <ul style="list-style: none;">
                        <h3><li>{{ row.brand.brand }} </li>
                        <li><b>{{ row.model }} </b> {{ row.year }}</li></h3>
                            <li> Geometry : <b>{{ row.geometry }}</b></li>
                            <li> Frame : <b>{{ row.material }}</b></li>
                            <li> Fork : <b>{{ row.fork }} {{ row.travelFork }} mm || {{ row.travelFork * 0.039}} in </b></li>
                        {% set damper = row.travelDamper | length %}
                        {% if damper < 1 %}
                        <li> No damper </li>
                        {% endif %}
                        {% if damper > 1 %}
                        <li> Damper : <b>{{ row.damper }} {{ row.travelDamper }} mm || {{ row.travelDamper * 0.039}} in </b></li>
                        {% endif %}
                        <li> Size : <b>{{ row.size }} </b>in and {{ row.wheels |lower}} rims</li>
                        <li> Derailleur :<b> {{ row.derailleur }}</b> </li>
                        <li> Gears : <b>{{ row.gears }} </b></li>
                        <li> Weight:<b> {{ row.weight }} kg || {{ row.weight * 2.2}} lbs</b></li>
                        <li> <b>More info : <a href="http://google.com/search?&q={{ row.brand.brand }} {{ row.model }} {{ row.year }}"></b>Google</a> </li>
                        </h5></ul></div>
                    </div>
                {% endfor %}
                    {% elseif amount == 0 %}
                <div class="6u 12u$(xsmall)">
                    <div class="image fit captioned">
                        <h3>YOUR QUERY DIDN'T MATCH WITCH ANY BIKE. PLEASE TRY AGAIN. </h3>
                    </div>
                </div>
                        {% elseif amount > 14 %}
                    <div class="6u 12u$(xsmall)">
                        <div class="image fit captioned">
                            <h3>WE FOUND TOO MUCH BIKES ({{ amount }}). PLEASE SPECIFY QUERY. </h3>
                        </div>
                    </div>
                {% endif %}
            </div>
            </div>
        </div>
    </section>
        {% endblock %}
{% endblock %}
