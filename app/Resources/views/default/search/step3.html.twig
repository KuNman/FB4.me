{% extends "default/homepage.html.twig" %}
{% block javascript %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $("select").select2({
            maximumSelectionLength: 2,
            width: '40%'
        });
        $(".fork").select2({
            maximumSelectionLength: 5,
            width: '40%'
        });
        $(".gears").select2({
            maximumSelectionLength: 3,
            width: '40%'
        });
        $(".geometry").select2({
            maximumSelectionLength: 3,
            width: '40%'
        });
        $('submit').height(100);
    });
    </script>
{% endblock %}

{% block content %}

    <body class="landing">
<!-- Header -->
<header id="header" class="alt">
    <nav id="nav">
        <ul>
            <li><a href="/">Home</a></li>
        </ul>
    </nav>
</header>
{# <a class="navPanelToggle"><span class="fa fa-bars"></span></a> #}
<!-- Banner -->
<section id="banner">
    {#<h2>Search Start</h2>#}
    <div id="form">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
</section>
<section id="one" class="wrapper style1">
    <div class="container 75%">
        <div class="row 200%">
            <div class="6u 12u$(medium)">
                <header class="major">
                    <h2>Disclaimer</h2>
                    <p>Categories info</p>
                </header>
            </div>
            <div class="6u$ 12u$(medium)">
                <p>
                    Frame material :
                    <li>Carbon - any carbon fiber (HMX, HMF etc.)
                    If bike has carbon AND alloy frame (p.ex. rear triangle) it's matched as carbon.</li>
                <li>
                    Aluminium - any alloy compound (6061, 6111) etc.</li>
                </p>
                <p>Wheels material :
                    <li>Carbon - any carbon fiber (HMX, HMF etc.)
                </li>
                <li>
                    Aluminium - any alloy compound (6061, 6111) etc.</li>
                </p>
                <p>Wheels&tires sizing :
                    <li>
                    27.5 Plus - more than 2.6" tire width.
                </li>
                </p>
                <p>
                    Gears :
                    <li>
                    In results are visible only REAR derailleurs names. If bike has front it's not displayed but calculated in
                    gears quantity.
                </li>
                </p>
                <p>
                    Geometry :
                    <li>
                    MTB bikes - less than 140mm front and rear travel. For casual/amateur cyclists.</li>
                <li>
                    Downhill bikes - more than 180mm front and rear travel.
                </li>
                <li>
                    Enduro bikes - 140-170mm front and rear travel.
                </li>
                <li>
                    XC bikes - 100-140mm of front and rear travel with more sporty position than in MTB bikes.
                </li>
                <li>
                    Slopestyle bikes - include dirt, pumptrack and BMX bikes.
                </li>
                </p>
            </div>
        </div>
    </div>
</section>

{% endblock %}
